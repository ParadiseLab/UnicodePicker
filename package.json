{
  "name": "unicodepicker",
  "version": "1.0.0",
  "description": "A unicode picker",
  "main": "main.js",
  "scripts": {
    "start": "npm install && electron .",
    "win_compile": "electron-packager . UnicodePicker --platform=win32 --arch=x64"
  },
  "build": {
    "appId": "yourappid",
    "category": "your.app.category.type",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "squirrel",
      "icon": "build/icon.ico"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ParadiseLab/UnicodePicker.git"
  },
  "keywords": [
    "Unicode",
    "Special",
    "Characters",
    "Picker"
  ],
  "author": "Brian SINQUIN",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ParadiseLab/UnicodePicker/issues"
  },
  "homepage": "https://github.com/ParadiseLab/UnicodePicker#readme",
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "latest",
    "electron-packager": "latest"
  },
  "dependencies": {
    "unicode-range-json": "latest"
  }
}
